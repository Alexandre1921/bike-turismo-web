{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/login",
        "destination": "/login.html"
      },
      {
        "source": "/map",
        "destination": "/map.html"
      },
      {
        "source": "/blog",
        "destination": "/blog.html"
      }
    ]
  }
}
